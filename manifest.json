{
   "manifest_version": 2,
   "name": "Tab Rotator",
   "description": "Automatically rotate between browser windows",
   "version": "1.0",
   "icons": {
      "16": "rotate_16.png",
      "32": "rotate_32.png",
      "64": "rotate_64.png",
      "128": "rotate_128.png"
   },
   "background": {
      "scripts": ["background.js"],
      "persistent": false
   },
   "browser_action": {
      "default_icon": {
         "16": "rotate_16.png",
         "64": "rotate_64.png"
      },
      "default_title": "Tab Rotator",
      "default_popup": "popup.html"
   },
   "permissions": ["tabs", "idle","storage"]
}
